<style>
  div {
    display: grid;
    height: 100%;
    width: 100%;
    grid-template: repeat(4, 1fr) / repeat(7, 1fr);
  }

  h1 {
    grid-area: 1 / 1 / 3 / 5;
    align-self: self-end;
    font-size: xxx-large;
    font-weight: normal;
  }

  h4 {
    grid-area: 3 / 1 / 5 / 5;
    font-weight: normal;
    font-style: italic;
  }
  
  p {
    grid-area: 2 / 5 / 4 / 8; 
    align-self: center;
  }

</style>

